<script src="~/Scripts/EasterEgg/jGravity-min.js"></script>


<script type="text/javascript">
    $(window).load(function () {
        $('.myButton').raptorize({
            'enterOn': 'konami-code'

        })
    });

    $(document).ready(function () {

        $("body").toasty();

        $("#toasty-button").click(function () {
            $("body").toasty('pop');
        });

    });

    window.onload = function () {
        try {
            var gradient = {
                0: '#f00', // red
                0.33: '#ff0', // yellow
                0.66: '#0f0', // green
                1: '#00f'  // blue
            };
            TagCanvas.weightGradient = gradient;
            TagCanvas.textColour = '#FF0000';
            TagCanvas.outlineColour = '#ff9999';
            TagCanvas.SetSpeed('#myCanvas', [0.10, -0.25]);
            //TagCanvas.SetSpeed('myCanvas', ['0.5', '-0.25']);         
            TagCanvas.Start('myCanvas');
        } catch (e) {
            // something went wrong, hide the canvas container
            document.getElementById('myCanvasContainer').style.display = 'none';
        }
    };

    $(document).ready(function () {

        $('div.jGravity').live('click', function () {
            $('body').jGravity({
                target: 'everything',
                ignoreClass: 'ignoreMe',
                weight: 25,
                depth: 5,
                drag: true
            });
        });
    });


