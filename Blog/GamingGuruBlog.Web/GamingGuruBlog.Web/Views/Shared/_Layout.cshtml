@using GamingGuruBlog.Data.Models
@using Microsoft.AspNet.Identity


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    

    <title>@ViewBag.Title - Gaming Guru</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    <link href="~/Content/app/SimplexTheme.css" rel="stylesheet" />
    @*<link href="~/Content/app/CyborgTheme.css" rel="stylesheet" />*@
    @*<link href="~/Content/app/SandstoneTheme.css" rel="stylesheet" />
    <link href="~/Content/app/SuperHeroTheme.css" rel="stylesheet" />*@

    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Scripts/EasterEgg/toasty.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gaming Guru", "Welcome", "Welcome", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.Action("Action", "PartialView")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin Panel", "AdminPanel", "Admin", new { id = User.Identity.GetUserId() }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-sm-8">
                @RenderBody()
                <a href="#" class="myButton"></a>  
                @*<div class="goButton jGravity"><h2>initate</h2></div>*@  
                <br />
            </div>
            @Html.Action("FillWidgetWithData", "PartialView")
            
        </div>       
        <footer>
            <p>&copy; @DateTime.Now.Year - Gaming Guru</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
<script src="~/Scripts/cheet.min.js"></script>
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
